
<%- include('partials/header') %>	

<div class='createBlog'>
	
	<h3 style = 'text-align: center'>Update - <%= blog.title %></h3>
	
	<form action='/blogs/<%= blog._id %>?_method=PUT', method='POST'>
		
		<div class = 'form-group'>
			<label>Title</label>
			<input class = 'form-control' type = 'text' name = 'blog[title]' value = '<%= blog.title %>'>
		</div>

		<div class = 'form-group'>
			<label>Image URL</label>
			<input class = 'form-control' type = 'text' name = 'blog[image]' value = '<%= blog.image %>' >
		</div>

		<div class = 'form-group'>
			<label>Body</label>
			<textarea class='form-control' name='blog[body]' rows='8'> <%= blog.body %> </textarea>
		</div>

		<div class = 'form-group' style = 'text-align: center'>	
			<button class = 'btn btn-primary'> Click to Update </button>
		</div>
		
	</form>
	
</div>
	
<%- include('partials/footer') %>