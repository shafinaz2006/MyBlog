
<!-- createBlog.ejs for Route: '/blogs/new' -->

<%- include('partials/header') %>	

<div class = 'createBlog'>
	
	<h3 style = 'text-align: center'>Create new blog!!</h3>
	
	<form action='/blogs', method='POST'>
		
		<div class = 'form-group'>
			
			<label>Current user: <%= createdBy.username%></label>
			
			<input class = 'form-control' type = 'text'  name = 'username' value = <%= createdBy.username%>> 
			
		</div>
		
		<div class = 'form-group'>
			
			<label>Title</label>
			
			<input class = 'form-control' type = 'text' placeholder = 'title' name = 'title'>
			
		</div>

		<div class = 'form-group'>
			
			<label>Image URL</label>
			
			<input class = 'form-control' type = 'text' placeholder = 'image URL' name = 'image'>
			
		</div>

		<div class = 'form-group'>
			
			<label>Body</label>
			
			<textarea class='form-control' placeholder='body' name='description' rows='8' ></textarea>
			
		</div>

		<div class = 'form-group' style = 'text-align: center;'>	
			
			<button class = 'btn btn-primary'> Click to Add!!! </button>
			
		</div>
		
	</form>
	
</div>
	
<%- include('partials/footer') %>