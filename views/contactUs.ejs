
<!-- createBlog.ejs for Route: '/blogs/new' -->

<%- include('partials/header') %>	

<div class = 'createBlog'>
	
	<h3 style = 'text-align: center;'>For any query, please fill out this form</h3>
	
	<form action = '/contact', method = 'POST'>
		
		<div class = 'form-group' style = 'margin-top: 30px; margin-bottom: 15px'>
			
			<label>Name: </label>
			
			<input class = 'form-control' type = 'text' name = 'contact[contactName]' placeholder = 'name'> 
			
		</div>
		
		<div class = 'form-group'>
			
			<label>Email: </label>
			
			<input class = 'form-control' type = 'email' name = 'contact[email]' placeholder = 'email'>
			
		</div>
		
		<div class = 'form-group'>
			
			<label>Phone Number: </label>
			
			<input class = 'form-control' type = 'number' name = 'contact[phoneNumber]' placeholder = '0123456789'>
			
		</div>

		<div class = 'form-group'>
			
			<label>Message</label>
			
			<textarea class='form-control' name='contact[message]' placeholder='message' rows='4' ></textarea>
			
		</div>

		<div class = 'form-group' style = 'text-align: center;'>	
			
			<button class = 'btn btn-primary btn-success'> Submit </button>
			
		</div>
		
	</form>
	
</div>
	
<%- include('partials/footer') %>