
<%- include('partials/header') %>	

<div class = 'commentsNewContent'>
	<h3> Comment on: </h3>
	<h3><%= blog.title %> </h3>
	<h5> Comment by: <em> <%= commenter.commenter %> </em> </h5>
	<form action = '/blogs/<%= blog._id %>/comments' method = 'POST'>
		<div class = 'form-group'>
			<textarea class='form-control' placeholder='comment' name='blogCommentText' rows='3' ></textarea>
		</div>
		<div class = 'form-group' style = 'text-align: center'>	
			<button class = 'btn btn-primary'> Click to add Comment! </button>
		</div>
	</form>
</div>
	
<%- include('partials/footer') %>