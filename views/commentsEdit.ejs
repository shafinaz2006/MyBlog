
<%- include('partials/header') %>	

<div class = 'commentsNewContent'>
	
	<h3> Update comment on: </h3>
	
	<h3> <%= blog.title %></h3>
	
	<h5> <em> Comment by: <%= oldComment.commentedBy.commenter %> </em> </h5>
	
	<form action = '/blogs/<%= blog._id %>/comments/<%= oldComment.id%>?_method=PUT' method = 'POST' >
		
		<div class = 'form-group'>
			<textarea class='form-control' name='blogComment[text]' ><%= oldComment.text %></textarea>
		</div>

		<div class = 'form-group' style = 'text-align: center'>	
			<button class = 'btn btn-primary'> Edit Comment! </button>
		</div>
		
	</form>
	
</div>
	
<%- include('partials/footer') %>